<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="details" id="blog">
      <h2>
        <%= blog.title %>
      </h2>
      <div>
        <p>
          <%= blog.message %>
        </p>
      </div>

      <a class="delete" data-idd="<%= blog._id %>"><i class="fas fa-trash-alt"></i></a>
    </div>

    <%- include('./partials/side.ejs') %> <%- include('./partials/footer.ejs')
    %>

    <script>
      const del = document.querySelector('a.delete')

      del.addEventListener('click', e => {
        const endpoint = `/${del.dataset.idd}`
        fetch(endpoint, {
          method: 'DELETE'
        })
          .then(response => response.json())
          .then(data => (window.location.href = data.redirect))
          .catch(err => console.log(err))
      })
    </script>
  </body>
</html>
